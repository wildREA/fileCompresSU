{
  "name": "filecompressu",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "nodemon electron . --disable-gpu",
    "start:prod": "electron ../dist",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder --publish never",
    "make-dist": "npm run build && npm run dist",
    "build": "npm run clean && npm run build:ts && npm run build:css:prod && npm run copy:assets && npm run copy:files && npm run copy:utils && npm run copy:configs && npm run copy:icons && npm run copy:package",
    "build:run": "npm run build && npm run start:prod",
    "build:ts": "tsc src/logic/preload.ts --outDir ../dist/logic && tsc src/logic/renderer.ts --outDir ../dist/logic && tsc src/logic/utils/compression.ts --outDir ../dist/logic/utils",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ../dist/styles.css --watch",
    "build:css:prod": "tailwindcss -i ./src/styles/tailwind.css -o ../dist/styles.css --minify",
    "copy:assets": "mkdir -p ../dist/images && cp -r src/images/* ../dist/images/",
    "copy:files": "cp index.html ../dist/ && cp main.js ../dist/",
    "copy:utils": "mkdir -p ../dist/logic/utils && cp -r src/logic/utils/*.js ../dist/logic/utils/",
    "copy:configs": "cp tailwind.config.js postcss.config.js tsconfig.json ../dist/ || true",
    "copy:icons": "mkdir -p ../dist/build && cp -r build/* ../dist/build/",
    "copy:package": "cp package.json ../dist/ && cd ../dist && npm install --production",
    "clean": "rimraf ../dist"
  },
  "build": {
    "appId": "com.slavdev.filecompresSU",
    "productName": "FileCompresSU",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "app/build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "app/build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "app/build/icon.png"
    },
    "directories": {
      "output": "release-builds",
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "SlavDev",
        "repo": "filecompressu"
      }
    ]
  },
  "keywords": [
    "file",
    "compression",
    "electron",
    "image",
    "pdf",
    "utility"
  ],
  "author": "SlavDev",
  "license": "ISC",
  "description": "A modern file compression application for images, PDFs, and text files",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "autoprefixer": "^10.4.21",
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "electron-updater": "^6.6.2",
    "imagemin": "^9.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.2.133",
    "sharp": "^0.34.1"
  }
}
