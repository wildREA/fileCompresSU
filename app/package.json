{
  "name": "filecompressu",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "nodemon electron . --disable-gpu",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles.css --watch"
  },
  "build": {
    "appId": "com.slavdev.filecompresSU",
    "productName": "FileCompresSU",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "app/build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "app/build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "app/build/icon.png"
    },
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "SlavDev",
        "repo": "filecompressu"
      }
    ]
  },
  "keywords": [
    "file",
    "compression",
    "electron",
    "image",
    "pdf",
    "utility"
  ],
  "author": "SlavDev",
  "license": "ISC",
  "description": "A modern file compression application for images, PDFs, and text files",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "autoprefixer": "^10.4.21",
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "electron-updater": "^6.6.2",
    "imagemin": "^9.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.2.133",
    "sharp": "^0.34.1"
  }
}
